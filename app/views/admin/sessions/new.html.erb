<div class="container">
  <div class="mt-4 h1 midashi">ログイン</div>
    <div class="col-7 mt-3 mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="border rounded p-3">
        <div class="form-group row field pt-4">
          <%= f.label :email, class:"col-3" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-6 form-control" %>
        </div>
      
        <div class="form-group row field">
          <%= f.label :password ,"パスワード", class:"col-3"%><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"col-3 form-control" %>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="field offset-3 ">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me,"パスワードを記憶させる" %>
          </div>
        <% end %>
      
        <div class="actions text-right mr-3">
          <%= f.submit "ログイン",class:"btn btn-primary" %>
        </div>
      </div>
      <% end %>
    </div>
      
      <%= render "admin/shared/links" %>
  </div>
</div>
