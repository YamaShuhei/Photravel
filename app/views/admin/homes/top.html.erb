<div class="container">
  <table class="table table-hover border">
    <thread>
      <tr>
        <th scope="col" class="text-center">投稿画像</th>
        <th scope="col">タイトル</th>
        <th scope="col">説明文</th>
        <th scope="col">ユーザ名</th>
        <th scope="col"></th>
      </tr>
    </thread>
    <tbody>
    <% if @posts.present? %>
      <% @posts.each do |post| %>  
      <tr>
        <td scope="row">
          <%= link_to admin_post_path(post.id), class:"d-flex justify-content-center" do %>
            <%= image_tag post.get_post_image(75,75) %>
          <% end %>
        </td>
        
        <td class="align-middle">
        <%= link_to admin_post_path(post.id) do %>
          <%= post.title %>
        <% end %>
        </td>
        <td class="align-middle text-truncate"><%= post.caption %></td>
        <td class="align-middle"><%= post.user.name %></td>
        <td class="align-middle"><%= link_to "削除", admin_post_path(post.id), method: :delete, data: {confirm: "削除しますか？"}  %></td>
      </tr>
      <% end %>
    <% else %>
      <tr>
        <td>投稿がありません。</td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <div class="row justify-content-center">
    <%= paginate @posts %>
  </div>
  
</div>