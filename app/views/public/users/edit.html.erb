<div class="container">
  <div class="midashi my-4">ユーザー登録情報変更</div>
  
  <div>
    <%= form_with(model: @user,local: true) do |f| %>

    
      <div class="edit-form border rounded p-3">
        <div class="form-group row field">
          <%= f.label :name, "ユーザー名", class:"col-3"%>
          <%= f.text_field :name, class:"col-4 form-control" %>
        </div>
        
        <div class="form-group row field">
        <%= f.label :email, "メールアドレス", class:"col-3" %>
        <%= f.text_field :email, class:"col-6 form-control" %>
        </div>
        
        <div class="form-group row field">
          <%= f.label :introduction, "自己紹介文", class:"col-3" %>
          <%= f.text_area :introduction, class:"col-6 form-control" %>
        </div>
        
        
        <div class="form-group row field">
          <%= f.label :profile_image, "プロフィール画像", class:"col-3" %>
          <div><%= f.file_field :profile_image, accept: "image/*" %></div>
        </div>
        <div class="d-flex justify-content-center" id="img-prev"></div>
      </div>
    
    　<div class="mt-2 float-right ">
        <%= f.submit "更新する",class:"btn btn-lg btn-success" %>
        <%= link_to "戻る", user_path(@user.id), class:"btn btn-lg btn-primary"%>
      </div>
    
    <% end %>
  </div>
  
  
</div>