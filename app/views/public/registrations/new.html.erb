<div class="container">
    <div class="d-inline-block h1 p-1 border rounded font-weight-bold bg-light">新規登録</div>
  
  <div class="col-10 mt-3">
    <%= form_with model: @user, url: user_registration_path ,local: true do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
    
      <!--メールアドレス入力欄-->
      <div id="new-form" class="border rounded p-3">
        <div class="form-group row field pt-4">
          <%= f.label :email, "メールアドレス", class:"col-3" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-6 form-control" %>
        </div>
        
        <!--名前入力欄-->
        <div class="form-group row field">
          <%= f.label :name, "ユーザー名", class:"col-3" %>
          <%= f.text_field :name, class:"col-4 form-control" %>
        </div>
      
        <!--パスワード入力欄-->
        <div class="form-group row field">
          <% if @minimum_password_length %>
          <%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)", class:"col-3" %>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class:"col-4 form-control" %>
        </div>
        
        <!--パスワード確認-->
        <div class="form-group row field">
          <%= f.label :password_confirmation, "パスワード確認", class:"col-3" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-4 form-control" %>
        </div>
        <!--ボタン-->
        <div class="text-right">
          <button id="next-btn" type="button" class="btn btn-primary">プロフィール設定</button>
          <%= f.submit "登録する",class:"btn btn-success"%>
        </div>
      </div>
      
      <!--ログインフォームへの遷移用-->
      <div class="d-inline-block border rounded col-6 mt-5 p-3 text-center float-right">
        <span class="align-middle mr-3">アカウントをお持ちの方は</span><%= render "public/shared/links" %>
      </div>

  </div>


  <!--詳細設定メニュー（モーダル）-->
  <div class="profileMenu-back">
    <div class="profileMenu">
      <div id="close-btn">
        <a class="btn btn-border">✖</a>
      </div>
      
      <div class="h3">詳細設定</div>
      <div class="h5 mb-5">（※プロフィールは登録後の設定と変更が可能です。）</div>
      
      <div class="form-group row field">
        <%= f.label :introduction, "自己紹介文", class:"col-3" %>
        <%= f.text_area :introduction, placeholder:"ここに自己紹介文をいれてください",class:"col-8 form-control",rows:"5" %>
      </div>
      
      <div class="form-group row field">
        <%= f.label :profile_image, "プロフィール画像", class:"col-3" %>
        <div><%= f.file_field :profile_image, accept: "image/*" %></div>
      </div>
        <div id="img-prev"></div>
        <%= f.submit "登録する",class:"btn btn-lg btn-success", id:"sub-btn"%>
    </div>
    
  </div>
  <% end %>
</div>

<script>
 // プレビュー画像表示用
  document.addEventListener('DOMContentLoaded', () => {
      const createImageHTML = (blob) => {  
      const imageElement = document.getElementById('img-prev'); 
      const blobImage = document.createElement('img'); 
      blobImage.setAttribute('class', 'new-img');
      blobImage.setAttribute('src', blob); 
      imageElement.appendChild(blobImage);
    }; 
    document.getElementById('user_profile_image').addEventListener('change', (e) =>{
      const imageContent = document.querySelector('img'); 
      if (imageContent){ 
        imageContent.remove(); 
      }
      
      const file = e.target.files[0];  
      const blob = window.URL.createObjectURL(file); 
      createImageHTML(blob); 
    });
  });
  
  // 枠外クリックで非表示に
  $(document).on('click', function(e) {
	//クリックされた場所の判定
	if(!$(e.target).closest('.profileMenu').length && !$(e.target).closest('#next-btn').length){
		$('.profileMenu-back').fadeOut();
	}else if($(e.target).closest('#next-btn').length){
		// ３．ポップアップの表示状態の判定
		if($('.profileMenu-back').is(':hidden')){
			$('.profileMenu-back').fadeIn();
		}else{
			$('.profileMenu-back').fadeOut();
		}
	}else if($(e.target).closest('#close-btn').length){
		if($('.profileMenu-back').is(':visible')){
			$('.profileMenu-back').fadeOut();
		}
	}
});
  
</script>