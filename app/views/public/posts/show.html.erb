<div class="container-fluid px-0">
  <div class="text-center">
    
    <!--メニュー上部-->
    <div class="row align-items-center justify-content-around">
      <!--タイトル部分-->
      <div class="col-8">
        <div class="row">
          <div class="text-left h3" id="post-title"><%= @post.title %></div>
      <!--ログインユーザーだった場合編集画面へ-->
          <% if @post.user_id == current_user.id %>
            <%= link_to "編集する", edit_post_path(@post.id), class:"btn btn-secondary"%>
          <% end %>
          </div>
       </div>
      <!--ユーザー情報-->
      <div class="col-3">
      <%= link_to user_path(@post.user_id) do %>
        <%= image_tag @post.user.get_profile_image(75,75), class:"border rounded-circle mr-2" %><span class="h5"><%= @post.user.name %></span>
      <% end %>
      </div>
    </div>
    
    <!--タグ-->
    <div class="row ml-4 mb-2">登録タグ：
      <div class="col-8 text-left">
        <% @post_tags.each do |tag| %>
        <div class="d-inline-block border rounded mr-2 bg-white">
          <%=tag.name%><%="(#{tag.posts.count})" %>
        </div>
        <% end %>
      </div>
    </div>
    <!--投稿画像-->
    <div class="bg-dark img-reg">
      <div class="img my-2">
          <%= image_tag @post.post_image, class:"img-fluid post-img" %>
      </div>
      
    </div>
  </div>
</div>

<div class="container-fluid mt-4" id="post-detail">
  <div class="row">
  <div class="col-9">
  <div class="shadow-sm rounded bg-white p-3">
    
    <div class="h3 mb-4">投稿詳細</div>
    <div class=" row justify-content-center">
      <div class="col-10">
        <div id="post-caption">
          <div class="d-inline-block h5">説明文</div>
          <div class="w-100 border post-caption-val rounded"><%= @post.caption %></div>
        </div>
      </div>
    </div>
    <div class="ruled-line">　</div>
    <!--コメントフォーム-->
    <div class=" row justify-content-center">
      <div class="col-10">
        <div id="post-caption">
          <div class="d-inline-block h3 my-4">コメントする</div>
          <div class="mb-5">
          <%= form_with(model:[@post, @comment], method: :post) do |f| %>
            <%= f.text_area :comment, placeholder: "コメントはこちらに入力して下さい（100文字以内）", class:"w-100", rows:"3" %>
            <%= f.submit "　送信　", class:"btn btn-sm btn-success float-right" %>
          <% end %>
          </div>
          
            <div class="h4 my-4">コメント(<%= @post.comments.count %>)</div>
            <% @post.comments.each do |comment| %>
            <div class="mb-3 row justify-content-between align-items-center w-100" id="post-comments">
              <div class="col-3 text-truncate px-0">
                <%= link_to user_path(comment.user_id), class:"badge badge- badge-light border" do %>
                  <%= image_tag comment.user.get_profile_image(50,50),class:"rounded-circle" %><span class="ml-1 h6 text-black font-weight-bold"><%= comment.user.name %></span>
                <% end %>
              </div>
              <div class="col-8">
                <div class="pr-1 "><%= comment.comment %></div>
                <div>（<%= comment.created_at.to_s(:datetime_jp) %>）</div>
              </div>
              <% if current_user == comment.user %>
                <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete, class:"btn btn-sm btn-danger mr-2" %>
              <% end %>
            </div>
            <% end %>
          
        </div>
      </div>
    </div>
  </div>
  </div>
  
  <div class="col-3 bg-white shadow-sm rounded" id="map-info">
    <!--MAP表示-->
    <div class="row justify-content-center">
      <div class="col-11">
        <div class="h5 my-3">撮影地</div>
        <div class="h6"><%= @post.map.address %></div>
      </div>
      <div class="d-flex justify-content-center">
        <div id="post-map"></div>
      </div>
    </div>
  </div>
  
</div>
</div>




<script>
var marker
var myLatLng
var map

function initMap(){
   myLatLng = new google.maps.LatLng({lat: gon.lat, lng: gon.lng});
   map = new google.maps.Map(document.getElementById('post-map'), {
   center: myLatLng,
   zoom: 13,
   mapTypeControl: false
  });
     marker = new google.maps.Marker({
     position: myLatLng,
     map: map});
}
</script>