<div class="container-fluid">
  <div class="row">
    最新の投稿一覧
  </div>
  
  <div class="text-center">
    <% @posts.each do |post| %>
    <div class="d-inline-block img-thumbnail mx-1 my-2">
    <%= link_to post_path(post.id) do %>
      <%= image_tag post.post_image,class:"posts"%><br>
      <%= post.title %>
      <div>
      タグ：
      <%= post.tags.map(&:name).join(' ') %>
      </div>
    <% end %>
    </div>
    <% end %>
    
  </div>
  
  
</div>