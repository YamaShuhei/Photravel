<div class="container">
  <% if @posts == [] %>
  <h2 class = "seach-result">該当する検索結果はありませんでした</h2>
  <% else %>
  <h2>検索結果(検索ワード：<%= params[:keyword]%>)</h2>
  <h3>見つかった投稿件数：<%= @posts.count%></h3>
  <div class="card-columns">
    <% @posts.each do |post| %>
    <div class="card">
      <%= link_to post_path(post.id) do %>
        <%= image_tag post.post_image, class: "px-0 col post-img bd-placeholder-img card-img-top" %>
        <div class="card-body p-3">
          <p class="card-text"><%= post.title %></p>
      <% end %>
          <p class="card-text"><%= post.user.name %></p>
          <p class="card-text text-right"><%= post.created_at.strftime('%Y年%m月%d日') %></p>
        </div>
    </div>
    <% end %>
  </div>
  <% end %>
</div>